{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*"]
}
